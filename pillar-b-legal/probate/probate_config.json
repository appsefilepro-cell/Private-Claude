    "required_documents_for_filing": [
      "Petition for Probate",
      "Certified Death Certificate",
      "Original Will",
      "Oath of Personal Representative",
      "Affidavit of Domicile",
      "Notice of Petition to Probate Will"
    ],
    "filing_deadlines": {
      "will_must_be_filed_days": 30,
      "inventory_due_days": 90,
      "first_account_due_days": 180,
      "final_account_due_days": 365,
      "estate_closure_timeline_days": 400
    }
  },
