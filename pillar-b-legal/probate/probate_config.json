  "timeline_tracking": {
    "milestones": [
      {
        "name": "Estate Initiated",
        "status": "initiated",
        "days_after_death": 0,
        "description": "Estate administration begins"
      },
      {
        "name": "Petition Filed",
        "status": "petition_filed",
        "days_after_death": 14,
        "description": "Petition for probate filed with court"
      },
      {
        "name": "Hearing Scheduled",
        "status": "hearing_scheduled",
        "days_after_death": 44,
        "description": "Probate hearing scheduled"
      },
      {
        "name": "Probate Granted",
        "status": "probate_granted",
        "days_after_death": 50,
        "description": "Court grants probate, PR receives letters"
      },
      {
        "name": "Inventory Filed",
        "status": "inventory_filed",
        "days_after_death": 140,
        "description": "Inventory and appraisal filed"
      },
      {
        "name": "Creditor Period Open",
        "status": "creditor_period_open",
        "days_after_death": 50,
        "description": "Notice to creditors published"
      },
      {
        "name": "Final Accounts Filed",
        "status": "accounts_filed",
        "days_after_death": 230,
        "description": "Final account and report filed"
      },
      {
        "name": "Assets Distributed",
        "status": "assets_distributed",
        "days_after_death": 240,
        "description": "Final distributions made to beneficiaries"
      },
      {
        "name": "Estate Closed",
        "status": "closed",
        "days_after_death": 250,
        "description": "Estate administration complete"
      }
    ]
  },
  "document_checklist": {
    "pre_filing": [
      {
        "document": "Death Certificate",
        "required": true,
        "copies_needed": 10,
        "description": "Certified copy of decedent's death certificate"
      },
      {
        "document": "Original Will",
        "required": true,
        "copies_needed": 5,
        "description": "Original will and any codicils"
      },
      {
        "document": "Birth Certificate",
        "required": false,
        "copies_needed": 2,
        "description": "Decedent's birth certificate"
      },
      {
        "document": "Marriage Certificate",
        "required": false,
        "copies_needed": 2,
        "description": "Marriage certificate if applicable"
      },
      {
        "document": "Tax Returns",
        "required": true,
        "copies_needed": 2,
        "description": "Last 3 years of income tax returns"
      },
      {
        "document": "Financial Statements",
        "required": true,
        "copies_needed": 1,
        "description": "Bank statements, investment accounts, mortgages"
      }
    ],
    "filing_documents": [
      {
        "document": "Petition for Probate",
        "required": true,
        "court_copies": 2,
        "description": "Formal petition filed with probate court"
      },
      {
        "document": "Oath of Personal Representative",
        "required": true,
        "court_copies": 2,
        "description": "PR takes oath before court/notary"
      },
      {
        "document": "Affidavit of Domicile",
        "required": true,
        "court_copies": 2,
        "description": "Establishes decedent's state of domicile"
      },
      {
        "document": "Notice of Petition",
        "required": true,
        "court_copies": 2,
        "description": "Published notice of probate hearing"
      },
      {
        "document": "Proof of Publication",
        "required": true,
        "court_copies": 2,
        "description": "Proof that notice was published"
      }
    ],
    "administration_documents": [
      {
        "document": "Inventory and Appraisal",
        "required": true,
        "court_copies": 2,
        "due_days": 90,
        "description": "List of all estate assets with values"
      },
      {
        "document": "Notice to Creditors",
        "required": true,
        "court_copies": 2,
        "due_days": 50,
        "description": "Published notice requesting creditor claims"
      },
      {
        "document": "Account Books",
        "required": true,
        "court_copies": 1,
        "description": "Detailed accounting of all estate transactions"
      },
      {
        "document": "Receipts and Invoices",
        "required": true,
        "court_copies": 0,
        "description": "Supporting documentation for all expenses"
      }
    ],
    "closing_documents": [
      {
        "document": "Final Account and Report",
        "required": true,
        "court_copies": 2,
        "due_days": 180,
        "description": "Final accounting of estate administration"
      },
      {
        "document": "Petition for Distribution",
        "required": true,
        "court_copies": 2,
        "description": "Request for court approval of distributions"
      },
      {
        "document": "Affidavit of Distribution",
        "required": true,
        "court_copies": 1,
        "description": "Certification that distributions were made"
      },
      {
        "document": "Order for Final Distribution",
        "required": true,
        "court_copies": 2,
        "description": "Court order approving final distributions"
      }
    ]
  },
  "court_filing_requirements": {
    "filing_fees": {
      "petition_filing": 300,
      "hearing_fee": 0,
      "inventory_filing": 0,
      "final_accounting_filing": 150,
