# SECURITY NOTICE: This is a template file. Copy to .env and fill with actual values.
# NEVER commit .env files to version control!

# Environment Configuration
ENVIRONMENT=development  # development, staging, production
DEBUG=False

# Encryption Keys (Use key management service in production!)
ENCRYPTION_KEY_ID=your-kms-key-id
MASTER_ENCRYPTION_KEY=generate-with-cryptography-fernet

# Database (Use encrypted connections in production)
DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
DATABASE_ENCRYPTION_ENABLED=True

# Kraken API (Store in AWS KMS / Azure Key Vault in production)
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-secret
KRAKEN_API_TIMEOUT=30
KRAKEN_RATE_LIMIT_ENABLED=True
KRAKEN_MAX_REQUESTS_PER_MINUTE=15

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
EMAIL_RATE_LIMIT_PER_HOUR=50

# Microsoft Integration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com
ONEDRIVE_ROOT_PATH=/Documents

# Zapier Integration
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxx
ZAPIER_API_KEY=your-zapier-api-key

# Security Settings
JWT_SECRET_KEY=generate-strong-random-key
JWT_EXPIRATION_HOURS=24
API_KEY_ROTATION_DAYS=90
ENABLE_IP_WHITELIST=True
ALLOWED_IPS=127.0.0.1,10.0.0.0/8

# Rate Limiting
RATE_LIMIT_STORAGE=redis://localhost:6379/0
GLOBAL_RATE_LIMIT=100/minute

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/business-automation/app.log
AUDIT_LOG_ENABLED=True
AUDIT_LOG_PATH=/var/log/business-automation/audit.log

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups
S3_BACKUP_BUCKET=your-backup-bucket
AZURE_BACKUP_CONTAINER=your-backup-container

# Monitoring
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_INTERVAL_SECONDS=60
ALERT_EMAIL=admin@example.com

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Application Settings
APP_NAME=Business Automation System
APP_VERSION=3.0.0
MAX_WORKERS=25
ENABLE_PARALLEL_PROCESSING=True
SANDBOX_MODE=True
