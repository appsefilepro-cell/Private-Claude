# Agent X5.0 Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# ===========================================
# AI API KEYS
# ===========================================
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
GEMINI_API_KEY=AIzaSyxxx

# ===========================================
# TRADING PLATFORMS
# ===========================================
OKX_API_KEY=your-okx-api-key
OKX_SECRET_KEY=your-okx-secret
OKX_PASSPHRASE=your-okx-passphrase

# MetaTrader 5 (optional)
MT5_LOGIN=your-mt5-login
MT5_PASSWORD=your-mt5-password
MT5_SERVER=your-mt5-server

# ===========================================
# E2B SANDBOX
# ===========================================
E2B_API_KEY=e2b_xxx

# ===========================================
# MICROSOFT 365
# ===========================================
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id
SHAREPOINT_SITE_URL=https://yoursite.sharepoint.com

# ===========================================
# GOOGLE CLOUD
# ===========================================
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_PROJECT_ID=your-project-id

# ===========================================
# ZAPIER
# ===========================================
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxx/xxx

# ===========================================
# SLACK
# ===========================================
SLACK_BOT_TOKEN=xoxb-xxx
SLACK_CHANNEL_TRADING=#trading-alerts
SLACK_CHANNEL_BONDS=#bonds-trading

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================
# Trading mode: PAPER, DEMO, or LIVE
TRADING_MODE=PAPER
LIVE_TRADING=false

# Logging
LOG_LEVEL=INFO

# Rate limiting (requests per minute)
API_RATE_LIMIT=60
MAX_DAILY_TRADES=10

# Cost controls
MAX_MONTHLY_API_COST=50
ALERT_THRESHOLD_PERCENT=80

# ===========================================
# BACKUP & RECOVERY
# ===========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_DESTINATION=google_drive
