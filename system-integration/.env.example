# System Integration Configuration
# Copy this file to .env and fill in your values

# ============================================
# Email Notification Settings
# ============================================
EMAIL_NOTIFICATIONS_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=system@private-claude.local
FROM_NAME=Private Claude System
TO_EMAIL=your-email@example.com

# Optional: Use SendGrid instead of SMTP
# SENDGRID_API_KEY=your-sendgrid-api-key

# Optional: Use AWS SES instead of SMTP
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================
# GitLab Configuration
# ============================================
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your-gitlab-personal-access-token
GITLAB_PROJECT_ID=your-project-id
GITLAB_WEBHOOK_SECRET=your-webhook-secret-token

# ============================================
# GitHub Configuration
# ============================================
GITHUB_URL=https://api.github.com
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO=owner/repository-name
GITHUB_WEBHOOK_SECRET=your-webhook-secret-token

# ============================================
# Git Sync Settings
# ============================================
GIT_SYNC_ENABLED=true
SYNC_BRANCHES=main,develop,staging

# ============================================
# Postman Configuration
# ============================================
POSTMAN_API_KEY=your-postman-api-key
POSTMAN_COLLECTION_ID=your-collection-id
POSTMAN_ENVIRONMENT_ID=your-environment-id
POSTMAN_WORKSPACE_ID=your-workspace-id

# Scheduled Tests
POSTMAN_SCHEDULED_TESTS=true
POSTMAN_TEST_INTERVAL=3600  # Run tests every hour

# Collection Monitoring
POSTMAN_MONITOR_ENABLED=true
POSTMAN_MONITOR_INTERVAL=300  # Check for updates every 5 minutes

# ============================================
# Zapier Configuration
# ============================================
ZAPIER_EMAIL_ENABLED=true
ZAPIER_EMAIL_ADDRESS=your-email@example.com

# Zapier Webhook URLs (create these in your Zapier account)
ZAPIER_GIT_WEBHOOK=https://hooks.zapier.com/hooks/catch/xxxxx/yyyyy/
ZAPIER_TEST_WEBHOOK=https://hooks.zapier.com/hooks/catch/xxxxx/yyyyy/
ZAPIER_ERROR_WEBHOOK=https://hooks.zapier.com/hooks/catch/xxxxx/yyyyy/
ZAPIER_GENERAL_WEBHOOK=https://hooks.zapier.com/hooks/catch/xxxxx/yyyyy/

# Optional: Zapier API Key for premium features
# ZAPIER_API_KEY=your-zapier-api-key

# ============================================
# Webhook Server Settings
# ============================================
WEBHOOK_PORT=8080

# ============================================
# Event Bus Settings
# ============================================
EVENT_BUS_MAX_HISTORY=1000
BATCH_NOTIFICATIONS=false
BATCH_INTERVAL=300  # 5 minutes

# ============================================
# Logging Settings
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/home/user/Private-Claude/logs/system-integration.log
