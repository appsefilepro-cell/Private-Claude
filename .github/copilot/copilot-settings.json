{
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "python": true,
    "javascript": true,
    "typescript": true,
    "jsx": true,
    "tsx": true,
    "json": true,
    "sql": true,
    "shell": true
  },
  "github.copilot.advanced": {
    "suggestionMode": "automatic",
    "multilineSuggestions": true,
    "contextSize": "large",
    "debug": false,
    "inlineSuggestEnable": true
  },
  "github.copilot.editor.enableAutoCompletions": true
}
