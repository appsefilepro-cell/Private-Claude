    "collections": [
      {
        "name": "MetaTrader 5 Trading API",
        "description": "Complete MT5 API for 3 demo accounts",
        "endpoints": [
          {
            "name": "Login to Account",
            "method": "POST",
            "url": "{{MT5_SERVER}}/login",
            "body": {
              "login": "{{MT5_ACCOUNT_1_LOGIN}}",
              "password": "{{MT5_ACCOUNT_1_PASSWORD}}",
              "server": "MetaQuotes-Demo"
            }
          },
          {
            "name": "Get Account Info",
            "method": "GET",
            "url": "{{MT5_SERVER}}/account/info"
          },
          {
            "name": "Place Market Order",
            "method": "POST",
            "url": "{{MT5_SERVER}}/order/place",
            "body": {
              "symbol": "EURUSD",
              "volume": 0.1,
              "type": "BUY",
              "price": null,
              "sl": 0,
              "tp": 0
            }
          },
          {
            "name": "Get Positions",
            "method": "GET",
            "url": "{{MT5_SERVER}}/positions"
          },
          {
            "name": "Close Position",
            "method": "POST",
            "url": "{{MT5_SERVER}}/position/close"
          }
        ]
      },
      {
        "name": "OKX Bitcoin Futures API",
        "description": "Complete OKX API for Bitcoin futures trading",
        "endpoints": [
          {
            "name": "Get Account Balance",
            "method": "GET",
            "url": "https://www.okx.com/api/v5/account/balance",
            "headers": {
              "OK-ACCESS-KEY": "{{OKX_API_KEY}}",
              "OK-ACCESS-SIGN": "{{OKX_SIGNATURE}}",
              "OK-ACCESS-TIMESTAMP": "{{$timestamp}}",
              "OK-ACCESS-PASSPHRASE": "{{OKX_PASSPHRASE}}"
            }
          },
          {
            "name": "Place Bitcoin Futures Order",
            "method": "POST",
            "url": "https://www.okx.com/api/v5/trade/order",
            "body": {
              "instId": "BTC-USDT-SWAP",
              "tdMode": "isolated",
              "side": "buy",
              "ordType": "market",
              "sz": "1"
            }
          },
          {
            "name": "Get Open Orders",
            "method": "GET",
            "url": "https://www.okx.com/api/v5/trade/orders-pending"
          }
        ]
      },
      {
        "name": "Zapier Webhook API",
        "description": "Complete Zapier integration for notifications and automation",
        "endpoints": [
          {
            "name": "Send Trade Notification",
            "method": "POST",
            "url": "https://hooks.zapier.com/hooks/catch/{{ZAPIER_WEBHOOK_ID}}/mt5trades",
            "body": {
              "account": "5044023923",
              "symbol": "EURUSD",
              "action": "BUY",
              "volume": 0.1,
              "price": 1.0850,
              "timestamp": "{{$timestamp}}"
            }
          },
          {
            "name": "Send Migration Notification",
            "method": "POST",
            "url": "https://hooks.zapier.com/hooks/catch/{{ZAPIER_WEBHOOK_ID}}/migration",
            "body": {
              "file_name": "document.docx",
              "source": "OneDrive",
              "destination": "Dropbox",
              "status": "completed",
              "timestamp": "{{$timestamp}}"
            }
          }
        ]
      },
      {
        "name": "E2B Sandbox API",
        "description": "E2B code execution and deployment",
        "endpoints": [
          {
            "name": "Execute Code",
            "method": "POST",
            "url": "https://api.e2b.dev/execute",
            "headers": {
              "Authorization": "Bearer {{E2B_API_KEY}}"
            },
            "body": {
              "code": "print('Hello from E2B')",
              "language": "python"
            }
          },
          {
            "name": "Send Webhook",
            "method": "POST",
            "url": "https://api.e2b.dev/webhooks/{{E2B_WEBHOOK_ID}}",
            "body": {
              "event": "deployment",
              "status": "success"
            }
          }
        ]
      }
    ],
