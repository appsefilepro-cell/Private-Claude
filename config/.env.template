# ============================================================================
# TRADING APIs
# ============================================================================
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_API_SECRET=your_kraken_api_secret

# Trading Risk Parameters
CONFIDENCE_THRESHOLD=0.75
MAX_POSITION_SIZE=0.02
RISK_PER_TRADE=0.01
MAX_DAILY_LOSS=0.05
MAX_WEEKLY_LOSS=0.10

# ============================================================================
# ZAPIER
# ============================================================================
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR_WEBHOOK_ID/
ZAPIER_MCP_ENDPOINT=https://mcp.zapier.com/api/mcp/mcp
ZAPIER_MCP_BEARER_TOKEN=your_zapier_mcp_bearer_token_here

# ============================================================================
# SAM.GOV Federal Contracting
# ============================================================================
SAM_GOV_API_KEY=your_sam_gov_api_key

# ============================================================================
# POWER AUTOMATE
# ============================================================================
POWER_AUTOMATE_WEBHOOK=your_power_automate_webhook_url

# ============================================================================
# NOTIFICATIONS
# ============================================================================
ALERT_EMAIL=appsefilepro@gmail.com
TEAMS_WEBHOOK=your_teams_webhook_url
SLACK_WEBHOOK=your_slack_webhook_url

# ============================================================================
# SECURITY & ENCRYPTION
# ============================================================================
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# ============================================================================
# DATABASE (if using)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/agentx2
DATABASE_ENCRYPT=true

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
ENVIRONMENT=production
DEBUG_MODE=false
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=90

# ============================================================================
# COMPLIANCE
# ============================================================================
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24

# ============================================================================
# MONITORING & HEALTH CHECKS
# ============================================================================
HEALTH_CHECK_INTERVAL=300
CHECK_INTERVAL_SECONDS=60
EMERGENCY_HALT_THRESHOLD=0.15

# ============================================================================
# INSTRUCTIONS
# ============================================================================
# 1. Copy this file: cp .env.template .env
# 2. Fill in all values marked with "your_*"
# 3. Keep .env file secure and never commit to git
# 4. Use strong, unique values for all secrets
# 5. Rotate credentials every 90 days
# 6. For production, use a secrets manager (Azure Key Vault, AWS Secrets Manager)
